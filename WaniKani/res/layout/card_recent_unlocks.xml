<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_recent_unlocks_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/card_recent_unlocks_title"
        style="@style/Widget.TextView.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_title_recent_unlocks"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/text_gray"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <ViewFlipper
        android:id="@+id/card_recent_unlocks_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ViewFlipper
            android:id="@+id/card_recent_unlocks_connection_view_flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/card_recent_unlocks_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:padding="12dp"
                    android:scrollbarStyle="outsideOverlay"
                    android:divider="@color/separator"
                    android:dividerHeight="1px"
                    android:layout_marginBottom="48dp" />

                <RelativeLayout
                    android:id="@+id/card_recent_unlocks_more_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/simple_item_background">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentTop="true"
                        android:background="@color/separator" />

                    <ImageView
                        android:id="@+id/card_recent_unlocks_more_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_action_back" />

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_alignParentLeft="true"
                        android:text="@string/action_more_items"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray" />

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/card_recent_unlocks_message_icon"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:id="@+id/card_recent_unlocks_message_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray" />

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:id="@+id/card_recent_unlocks_message_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

            </LinearLayout>
        </ViewFlipper>
    </ViewFlipper>

</LinearLayout>