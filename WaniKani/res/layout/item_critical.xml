<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:minHeight="48dp"
    android:background="@drawable/simple_item_background">

    <View
        android:id="@+id/item_critical_type"
        android:layout_width="4dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:background="@color/background_disabled" />

    <TextView
        android:id="@+id/item_critical_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="サンプル"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/text_gray" />

    <ImageView
        android:id="@+id/item_critical_character_image"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="14dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/item_critical_percentage"
        style="@style/Widget.TextView.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/item_critical_percentage_sign"
        android:text="0"
        android:textSize="18sp"
        android:textColor="@color/text_gray" />

    <TextView
        android:id="@+id/item_critical_percentage_sign"
        style="@style/Widget.TextView.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="%"
        android:textSize="18sp"
        android:textColor="@color/text_gray" />

</RelativeLayout>