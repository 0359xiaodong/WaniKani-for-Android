<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_status_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_light"
    android:orientation="vertical">

    <TextView
        style="@style/Widget.TextView.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/card_title_status"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/text_gray" />

    <ViewFlipper
        android:id="@+id/card_status_details_flipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <RelativeLayout
                    android:id="@+id/card_status_apprentice_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/card_status_separator1"
                    android:background="@drawable/simple_item_background">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_status_apprentice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/text_gray"
                            android:textSize="32sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_apprentice" />

                            <TextView
                                style="@style/Widget.TextView.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="4dp"
                                android:text="@string/srs_title_apprentice"
                                android:textColor="@color/text_gray"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/card_status_separator1"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:background="@color/separator"
                    android:padding="8dp" />

                <RelativeLayout
                    android:id="@+id/card_status_guru_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/card_status_separator1"
                    android:background="@drawable/simple_item_background">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_status_guru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/text_gray"
                            android:textSize="32sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_guru" />

                            <TextView
                                style="@style/Widget.TextView.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="4dp"
                                android:text="@string/srs_title_guru"
                                android:textColor="@color/text_gray"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerHorizontal="true"
                android:background="@color/separator" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <RelativeLayout
                    android:id="@+id/card_status_master_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/card_status_separator2"
                    android:background="@drawable/simple_item_background">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_status_master"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/text_gray"
                            android:textSize="32sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_master" />

                            <TextView
                                style="@style/Widget.TextView.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="4dp"
                                android:text="@string/srs_title_master"
                                android:textColor="@color/text_gray"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/card_status_separator2"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/separator"
                    android:padding="8dp" />

                <RelativeLayout
                    android:id="@+id/card_status_enlightened_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/card_status_separator2"
                    android:background="@drawable/simple_item_background">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_status_enlightened"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/text_gray"
                            android:textSize="32sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_enlighten" />

                            <TextView
                                style="@style/Widget.TextView.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="4dp"
                                android:text="@string/srs_title_enlightened"
                                android:textColor="@color/text_gray"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerHorizontal="true"
                android:background="@color/separator" />

            <RelativeLayout
                android:id="@+id/card_status_burned_parent"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/simple_item_background">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_status_burned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/text_gray"
                        android:textSize="32sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_burned" />

                        <TextView
                            style="@style/Widget.TextView.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="4dp"
                            android:text="@string/srs_title_burned"
                            android:textColor="@color/text_gray"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ViewFlipper
                android:id="@+id/card_status_details_super_flipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/card_status_details_srs_logo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/apprentice" />

                        <TextView
                            android:id="@+id/card_status_details_srs_level"
                            style="@style/Widget.TextView.Light"
                            android:layout_width="wrap_content"
                            android:text="@string/srs_title_apprentice"
                            android:textColor="@color/text_gray"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:textAppearance="@android:style/TextAppearance.Large"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            style="@style/Widget.TextView.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="@string/card_content_progress_radicals"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/text_gray" />

                        <TextView
                            android:id="@+id/card_status_details_radicals_count"
                            style="@style/Widget.TextView.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:text="0"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/text_gray" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/separator" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            style="@style/Widget.TextView.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="@string/card_content_progress_kanji"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/text_gray" />

                        <TextView
                            android:id="@+id/card_status_details_kanji_count"
                            style="@style/Widget.TextView.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:text="0"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/text_gray" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/separator" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            style="@style/Widget.TextView.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="@string/card_content_progress_vocabulary"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/text_gray" />

                        <TextView
                            android:id="@+id/card_status_details_vocabulary_count"
                            style="@style/Widget.TextView.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:text="0"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/text_gray" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/separator" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="@string/card_content_progress_total"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/text_gray" />

                        <TextView
                            android:id="@+id/card_status_details_total_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:text="0"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/text_gray" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card_status_details_up_button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/simple_item_background">

                        <ImageView
                            android:id="@+id/card_status_details_up_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_action_back" />

                        <TextView
                            style="@style/Widget.TextView.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/card_status_details_up_icon"
                            android:text="@string/action_back"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/text_gray" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentTop="true"
                            android:background="@color/separator" />

                    </RelativeLayout>
                </LinearLayout>
            </ViewFlipper>

        </RelativeLayout>
    </ViewFlipper>

</LinearLayout>