<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="48dp"
    android:minHeight="48dp"
    android:minWidth="250dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/item_recent_unlock_grid_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="48dp"
        android:minWidth="250dp"
        android:background="@drawable/card_light">

        <View
            android:id="@+id/item_recent_unlock_type"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:background="@color/background_disabled"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/item_recent_unlock_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="サンプル"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/text_gray" />

        <ImageView
            android:id="@+id/item_recent_unlock_character_image"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingLeft="18dp"
            android:paddingRight="14dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="4dp" />

        <TextView
            android:id="@+id/item_recent_unlock_time"
            style="@style/Widget.TextView.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="00:00"
            android:textSize="18sp"
            android:textColor="@color/text_gray" />

    </RelativeLayout>
</FrameLayout>