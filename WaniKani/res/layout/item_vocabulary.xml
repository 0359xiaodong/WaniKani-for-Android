<?xml version="1" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="60dp"
    android:background="@android:color/transparent"
    android:minHeight="60dp"
    android:minWidth="250dp">

    <LinearLayout
        android:id="@+id/item_vocabulary_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_light"
        android:minHeight="60dp"
        android:minWidth="250dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_vocabulary_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="大した"
                android:textColor="@color/text_gray"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_vocabulary_kana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="たいした"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/item_vocabulary_meaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Considerable"
                    android:textColor="@color/text_gray" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/item_vocabulary_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:minHeight="58dp"
        android:minWidth="250dp" />
</FrameLayout>