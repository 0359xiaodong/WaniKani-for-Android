<?xml version="1" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="130dp"
    android:minHeight="130dp"
    android:minWidth="100dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/item_radical_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="130dp"
        android:minWidth="100dp"
        android:background="@drawable/card_light">

        <View
            android:id="@+id/item_radical_status"
            android:background="@drawable/oval_radical"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_radical_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="æœ¨"
                    android:textSize="36sp"
                    android:textColor="@color/text_gray"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/item_radical_character_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="fitCenter"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/item_radical_meaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tree"
                android:textColor="@color/text_gray"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>