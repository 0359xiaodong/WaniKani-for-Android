    <LinearLayout
        android:id="@+id/details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/card_disabled">

                <TextView
                    android:id="@+id/details_level"
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="-"
                    android:textColor="@color/text_white"
                    android:textSize="36sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/details_character_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_disabled"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <ImageView
                        android:id="@+id/details_character_image"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="8dp"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/details_character_text"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/info_loading"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@color/text_white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#30ffffff" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/details_meaning"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="2dp"
                        android:text="@string/info_loading"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@color/text_white" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/details_aternative_meanings_and_user_synonyms_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_light"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:id="@+id/details_alternative_meanings_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_title_details_alternative_meanings"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/details_alternative_meanings"
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/info_loading"
                    android:textColor="@color/text_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_user_synonyms_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_title_details_user_synonyms"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/details_user_synonyms"
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/info_loading"
                    android:textColor="@color/text_gray" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/details_readings_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_light"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/details_readings_reading_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_title_details_reading"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/details_reading"
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/info_loading"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_readings_onyomi_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_title_details_reading_onyomi"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/details_readings_onyomi"
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/info_loading"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_readings_kunyomi_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_title_details_reading_kunyomi"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/details_readings_kunyomi"
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/info_loading"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/details_reading_note_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_light"
            android:orientation="vertical">

            <TextView
                style="@style/Widget.TextView.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_title_details_reading_note"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/text_gray"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/details_reading_note"
                style="@style/Widget.TextView.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:text="@string/info_loading"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/details_meaning_note_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/card_light"
            android:orientation="vertical">

            <TextView
                style="@style/Widget.TextView.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_title_details_meaning_note"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/text_gray"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/details_meaning_note"
                style="@style/Widget.TextView.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="@string/info_loading"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/details_progress_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_light"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/details_progress_title"
                style="@style/Widget.TextView.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_title_details_progress"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/text_gray"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/details_progress_locked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_action_secure" />

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/card_content_details_progress_locked"
                        android:textColor="@color/text_gray"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_content_details_progress_or_not_learned"
                    android:textColor="@color/text_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_progress_burned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/burned" />

                <TextView
                    style="@style/Widget.TextView.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/card_content_details_burned"
                    android:textColor="@color/text_gray"
                    android:textSize="26sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_content_details_progress_on"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light" />

                    <TextView
                        android:id="@+id/details_progress_burned_date"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="1 Jan 2014"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_progress_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/details_progress_srs_logo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/apprentice" />

                    <TextView
                        android:id="@+id/details_progress_srs_level"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="@string/info_loading"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/details_progress_unlocked_holder"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/card_content_details_progress_unlocked"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/details_progress_unlocked"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/details_progress_next_available_holder"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/card_content_details_progress_next_available"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/details_progress_next_available"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/details_progress_meaning_correct_holder"
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/card_content_details_progress_meaning_correct"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/details_progress_meaning_correct_percentage"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/details_progress_meaning_correct_percentage_sign"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light"
                        android:maxEms="3"
                        android:maxLines="1"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/details_progress_meaning_correct_percentage_sign"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="%"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light"
                        android:layout_marginTop="10dp" />

                    <ProgressBar
                        android:id="@+id/details_progress_meaning_correct_progress"
                        style="@style/ProgressBarCorrect"
                        android:layout_below="@+id/details_progress_meaning_correct_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="0" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/details_progress_meaning_incorrect_holder"
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/card_content_details_progress_meaning_incorrect"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="10dp" />
                    Ò

                    <TextView
                        android:id="@+id/details_progress_meaning_incorrect_percentage"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/details_progress_meaning_incorrect_percentage_sign"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light"
                        android:maxEms="3"
                        android:maxLines="1"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/details_progress_meaning_incorrect_percentage_sign"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="%"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light"
                        android:layout_marginTop="10dp" />

                    <ProgressBar
                        android:id="@+id/details_progress_meaning_incorrect_progress"
                        style="@style/ProgressBarIncorrect"
                        android:layout_below="@+id/details_progress_meaning_incorrect_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="0" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/details_progress_meaning_max_streak_holder"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/card_content_details_progress_meaning_max_streak"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/details_progress_meaning_max_streak"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/details_progress_meaning_current_streak_holder"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/card_content_details_progress_meaning_current_streak"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/details_progress_meaning_current_streak"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/details_progress_reading_correct_holder"
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentTop="true"
                        android:background="@color/separator" />

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/card_content_details_progress_reading_correct"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/details_progress_reading_correct_percentage"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/details_progress_reading_correct_percentage_sign"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light"
                        android:maxEms="3"
                        android:maxLines="1"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/details_progress_reading_correct_percentage_sign"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="%"
                        android:textAppearance="@android:style/TextAppearance.Medium"
