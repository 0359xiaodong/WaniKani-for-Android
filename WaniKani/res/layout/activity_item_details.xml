                        android:layout_height="wrap_content"
                        android:progress="0" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/details_progress_reading_max_streak_holder"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/card_content_details_progress_reading_max_streak"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/details_progress_reading_max_streak"
                        style="@style/Widget.TextView.Light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_gray_light" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/separator" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/details_progress_reading_current_streak_holder"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        style="@style/Widget.TextView.Light"
