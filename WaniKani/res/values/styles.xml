<resources>

    <style name="ThemeLightDarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>
    </style>

    <style name="AppTheme.ActionBar.Light" parent="Widget.AppCompat.Light.ActionBar.Solid"></style>

    <style name="AlertDialog" parent="@android:style/Theme.Dialog"></style>

    <style name="ProgressBarRadical" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/radical_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/radical_progress_indeterminate_horizontal_holo_light
        </item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="ProgressBarKanji" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/kanji_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">
            @drawable/kanji_progress_indeterminate_horizontal_holo_light
        </item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="ProgressBarCorrect" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbarcorrect_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progressbarcorrect_progress_indeterminate_horizontal_holo_light</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="ProgressBarIncorrect" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbarincorrect_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progressbarincorrect_progress_indeterminate_horizontal_holo_light</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="TextApparance.ActionBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="EditText.AppTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textColorHint">@color/text_gray_light</item>
    </style>

</resources>
